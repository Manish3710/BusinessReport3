# Server Configuration
PORT=3001
NODE_ENV=development

# Oracle Cloud Autonomous Database Configuration
# Get these values from Oracle Cloud Console and downloaded wallet
ORACLE_USER=ADMIN
ORACLE_PASSWORD=your_database_password
ORACLE_CONNECTION_STRING=(description=(retry_count=20)(retry_delay=3)(address=(protocol=tcps)(port=1522)(host=your-host.oraclecloud.com))(connect_data=(service_name=your_service_name))(security=(ssl_server_cert_dn="CN=your-cert")))
ORACLE_WALLET_LOCATION=./wallet
ORACLE_WALLET_PASSWORD=

# For Render deployment with base64 encoded wallet
ORACLE_WALLET_BASE64=

# JWT Configuration (Change this to a secure random string in production)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-in-production

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM="Business Reports" <your-email@gmail.com>

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# For production (Render), use your Netlify frontend URL:
# FRONTEND_URL=https://your-app.netlify.app

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv